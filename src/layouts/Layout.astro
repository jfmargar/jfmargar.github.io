---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Open Graph / Meta Tags -->
		<meta property="og:title" content="Julián Marqués García · Portfolio" />
		<meta property="og:description" content="Apps móviles nativas, rápidas y memorables." />
		<meta property="og:image" content="/images/og-portfolio.png" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600;700&family=Plus+Jakarta+Sans:wght@400;500;600&display=swap" rel="stylesheet" />
		
		<ClientRouter />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
